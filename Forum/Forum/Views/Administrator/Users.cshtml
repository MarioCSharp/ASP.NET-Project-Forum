@using Forum.Models.Administrator
@model AllUsersQuery

@foreach (var user in Model.Users)
{
    @if (user.Email != "mario.18@abv.bg")
    {
        <div class="container-fluid mt-100">
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="media flex-wrap w-100 align-items-center">
                                <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                                <div class="media-body ml-3">
                                    @user.Email
                                    <div class="text-muted small">
                                        <br />
                                    </div>
                                    <div class="media-body ml-1">
                                        @if (User.IsInRole(GlobalConstants.Administator.AdministratorRoleName))
                                        {
                                            <a asp-controller="Administrator" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
